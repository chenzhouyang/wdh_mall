<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- 历史验证Xlistview的item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/DIMEN_80dp"
            android:layout_height="@dimen/DIMEN_80dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/img_error" />

        <LinearLayout
            android:id="@+id/ll_xlv_history_item"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_xlv_history_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_20dp"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:text=""
                android:textColor="@color/a0B0400" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/DIMEN_20dp"
                    android:text="单价:"
                    android:textColor="@color/a5A7385" />

                <TextView
                    android:id="@+id/tv_xlv_history_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/a5A7385" />

                <TextView
                    android:id="@+id/tv_xlv_history_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="套餐命："
                    android:textColor="@color/a5A7385" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/DIMEN_20dp"
                    android:text="份数:"
                    android:textColor="@color/a5A7385" />

                <TextView
                    android:id="@+id/tv_xlv_history_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/a5A7385" />

                <TextView
                    android:id="@+id/tv_xlv_history_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.7"
                    android:text="合计"
                    android:textColor="@color/a5A7385" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_xlv_history_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/DIMEN_20dp"

                    android:text="日期:"
                    android:textColor="@color/a5A7385" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2dp"
        android:layout_marginTop="@dimen/DIMEN_3dp"
        android:background="@color/B3B3B3" />
</LinearLayout>