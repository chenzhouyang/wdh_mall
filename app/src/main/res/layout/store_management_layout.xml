<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/layout_theme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#1eb4fe"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/left_arrow_yellow" />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back_call"
            android:gravity="center"
            android:text=""
            android:singleLine="true"
            android:textSize="17sp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:id="@+id/image_right"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="编辑"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/fen_problem" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0dp"
        android:layout_weight="4"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mark"
                android:layout_width="@dimen/DIMEN_70dp"
                android:layout_height="@dimen/DIMEN_70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_20dp"
                android:src="@mipmap/default_image" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_the_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingTop="@dimen/DIMEN_10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_16sp" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/local_server_title" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0dp"
        android:layout_marginTop="@dimen/DIMEN_5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:gravity="center_vertical"
            android:text="基本信息："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0dp"
        android:layout_marginTop="@dimen/DIMEN_5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:gravity="center_vertical"
            android:text="店面信息："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/huise" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0dp"
        android:layout_marginTop="@dimen/DIMEN_5dp"
        android:layout_weight="1.5"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:gravity="center_vertical"
            android:text="门店地址："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_the_map"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:layout_marginRight="@dimen/DIMEN_20dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0dp"
        android:layout_marginTop="@dimen/DIMEN_5dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:gravity="center_vertical"
            android:text="关联账号："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_account"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/huise"
            android:textSize="@dimen/DIMEN_17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>