<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_13dp"
        android:layout_marginTop="@dimen/DIMEN_14dp">

        <ImageView
            android:id="@+id/img_goods"
            android:layout_width="@dimen/DIMEN_88dp"
            android:layout_height="@dimen/DIMEN_88dp"
            android:layout_marginLeft="@dimen/DIMEN_10dp"
            android:layout_marginRight="@dimen/DIMEN_10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_2dp"
            android:layout_toRightOf="@id/img_goods"
            android:textColor="#2d3139"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/DIMEN_9dp"
            android:layout_toRightOf="@id/img_goods"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fb3781"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sold_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_7dp"
                    android:textColor="#989a9f"
                    android:textSize="12sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/DIMEN_9dp"
                android:layout_height="@dimen/DIMEN_14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/img_goods"
            android:layout_below="@id/rl_one"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/tv_has_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#989a9f"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_add_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#989a9f"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e4e4e4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/DIMEN_12dp"
            android:textSize="@dimen/DIMEN_12sp"
            android:textColor="#696969"
            android:drawableTop="@mipmap/provider_edit"
            android:gravity="center"
            android:text="编辑"
            />
        <TextView
            android:id="@+id/tv_up_or_down"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/DIMEN_12dp"
            android:textSize="@dimen/DIMEN_12sp"
            android:textColor="#696969"
            android:drawableTop="@mipmap/provider_down"
            android:gravity="center"
            android:text="上架"
           />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/DIMEN_12dp"
            android:textSize="@dimen/DIMEN_12sp"
            android:textColor="#696969"
            android:drawableTop="@mipmap/provider_delete"
            android:gravity="center"
            android:text="删除"
            />
    </LinearLayout>
</LinearLayout>