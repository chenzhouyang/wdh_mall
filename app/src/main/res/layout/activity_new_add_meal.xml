<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:orientation="vertical">
    <include layout="@layout/title_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_5dp"
        android:layout_marginRight="@dimen/DIMEN_5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upload_meal_show_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/meal_show_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/sdk_share_dialog_thumb_default" />

                <Button
                    android:id="@+id/upload_image_remind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_20dp"
                    android:layout_below="@+id/meal_show_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/DIMEN_5dp"
                    android:background="@color/a00000000"
                    android:gravity="center_horizontal"
                    android:text="@string/pm_new_add_content_upload_image"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/xiaohao"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_10dp" />
            <LinearLayout
                android:id="@+id/meal_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <TextView
                    android:id="@+id/category_show"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item1_content"
                    android:textColor="@color/huise"
                    android:textSize="@dimen/xiaohao" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <TextView
                    android:id="@+id/meal_shop_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/huise"
                    android:textSize="@dimen/xiaohao" />
            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/package_name"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/meal_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="单行输入"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/describe"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="套餐描述"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/meal_describe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="单行输入"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:id="@+id/meal_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <TextView
                    android:id="@+id/meal_content_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="@dimen/DIMEN_80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/meal_team_buy_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="单行输入"
                    android:inputType="numberDecimal"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="@dimen/DIMEN_80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="标签"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/meal_team_buy_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="例：推荐"
                    android:inputType="text"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/percentage"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <Spinner
                    android:id="@+id/sp_profit_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:popupBackground="#ffffff" />
            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:id="@+id/validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <TextView
                    android:id="@+id/validity_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="12个月"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dahao" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />

            <LinearLayout
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/pm_new_add_content_item8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <include layout="@layout/gray_cut_off_line" />
            <LinearLayout
                android:id="@+id/notice_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/notice_one"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/notice_two"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/notice_three"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/notice_four"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/notice_five"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/notice_six"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/notice_seven"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/notice_eight"
                        layout="@layout/item_buy_notice_show"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/gray_cut_off_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/shape_code_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="@dimen/DIMEN_80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="条形码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/shape_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="输入条形码"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>
            <include layout="@layout/gray_cut_off_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/repertory_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="@dimen/DIMEN_80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="库存"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/repertory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="输入库存数量"

                    android:inputType="number"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>
            <include layout="@layout/gray_cut_off_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/m_worth_ll"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/DIMEN_8dp">

                <TextView
                    android:layout_width="@dimen/DIMEN_80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="产品分润"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaohao" />

                <EditText
                    android:id="@+id/m_worth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="产品分润，不能低于价格的50%"

                    android:inputType="numberDecimal"
                    android:paddingBottom="@dimen/DIMEN_5dp"
                    android:paddingTop="@dimen/DIMEN_5dp"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/weihao" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
