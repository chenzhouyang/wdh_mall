<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/left_arrow" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btn_back_call"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="保存"
            android:textColor="#333333"
            android:textSize="@dimen/DIMEN_15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#e1e1e1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_160dp"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/DIMEN_10dp"
                    android:drawableTop="@mipmap/add_image_big"
                    android:text="添加商品图片"
                    android:textColor="#5c5c5c"
                    android:textSize="15sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_cb"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:visibility="gone">

                <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    app:canLoop="true" />

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/DIMEN_20dp"
                    android:layout_marginTop="@dimen/DIMEN_20dp"
                    android:src="@mipmap/add_image_small" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:background="#e1e1e1" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/DIMEN_11dp"
                android:layout_marginRight="@dimen/DIMEN_11dp"
                android:layout_marginTop="@dimen/DIMEN_8dp"
                android:background="@drawable/drawable_provider_bg"
                android:cursorVisible="false"
                android:hint="请填写商品名称"
                android:lines="2"
                android:paddingLeft="@dimen/DIMEN_9dp"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_des"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/DIMEN_11dp"
                android:layout_marginRight="@dimen/DIMEN_11dp"
                android:layout_marginTop="@dimen/DIMEN_5dp"
                android:background="@drawable/drawable_provider_bg"
                android:cursorVisible="false"
                android:hint="请填写商品描述"
                android:lines="2"
                android:paddingLeft="@dimen/DIMEN_9dp"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />

            <com.yskj.wdh.widget.NoScrollListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"></com.yskj.wdh.widget.NoScrollListView>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_50dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/DIMEN_15dp"
                android:drawableLeft="@mipmap/provider_add_goods"
                android:drawablePadding="@dimen/DIMEN_8dp"
                android:gravity="center_vertical"
                android:text="添加商品型号"
                android:textColor="#333333"
                android:textSize="@dimen/DIMEN_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:background="#e1e1e1" />

            <LinearLayout
                android:id="@+id/ll_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_49dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_25dp"
                    android:layout_weight="1"
                    android:text="商品详情"
                    android:textColor="#5c5c5c"
                    android:textSize="@dimen/DIMEN_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:drawableRight="@mipmap/right_arrow_admin"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:background="#e1e1e1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:background="#e1e1e1" />

            <LinearLayout
                android:id="@+id/ll_goods_kinds"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_49dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_25dp"
                    android:layout_weight="1"
                    android:text="分类"
                    android:textColor="#5c5c5c"
                    android:textSize="@dimen/DIMEN_15sp" />

                <TextView
                    android:id="@+id/tv_kinds"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:drawableRight="@mipmap/right_arrow_admin"
                    android:gravity="center"
                    android:text="未分类"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:background="#e1e1e1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:background="#e1e1e1" />

            <LinearLayout
                android:id="@+id/ll_goods_logistics"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_49dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_25dp"
                    android:layout_weight="1"
                    android:text="运费模板"
                    android:textColor="#5c5c5c"
                    android:textSize="@dimen/DIMEN_15sp" />

                <TextView
                    android:id="@+id/tv_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="20dp"
                    android:drawableRight="@mipmap/right_arrow_admin"
                    android:gravity="center"
                    android:text="默认模板"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1dp"
                android:background="#e1e1e1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>