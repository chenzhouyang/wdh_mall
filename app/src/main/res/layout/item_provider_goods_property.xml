<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:layout_marginLeft="@dimen/DIMEN_11dp"
        android:layout_marginRight="@dimen/DIMEN_11dp"
        android:layout_marginTop="@dimen/DIMEN_8dp"
        android:background="@drawable/drawable_provider_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="规格"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/DIMEN_15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/DIMEN_10dp"
            android:layout_marginTop="@dimen/DIMEN_10dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="false"
            android:paddingLeft="@dimen/DIMEN_9dp"
            android:hint="请填写商品规格"
            android:lines="2"
            android:textColorHint="#c9c9c9"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:layout_marginLeft="@dimen/DIMEN_11dp"
        android:layout_marginRight="@dimen/DIMEN_11dp"
        android:layout_marginTop="@dimen/DIMEN_3dp"
        android:background="@drawable/drawable_provider_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="价格"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/DIMEN_15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/DIMEN_10dp"
            android:layout_marginTop="@dimen/DIMEN_10dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="false"
            android:paddingLeft="@dimen/DIMEN_9dp"
            android:hint="请填写商品价格"
            android:inputType="numberDecimal"
            android:lines="2"
            android:textColorHint="#c9c9c9"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:layout_marginLeft="@dimen/DIMEN_11dp"
        android:layout_marginRight="@dimen/DIMEN_11dp"
        android:layout_marginTop="@dimen/DIMEN_3dp"
        android:background="@drawable/drawable_provider_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="库存"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/DIMEN_15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/DIMEN_10dp"
            android:layout_marginTop="@dimen/DIMEN_10dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="false"
            android:paddingLeft="@dimen/DIMEN_9dp"
            android:hint="请填写商品库存"
            android:inputType="number"
            android:lines="2"
            android:textColorHint="#c9c9c9"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:layout_marginLeft="@dimen/DIMEN_11dp"
        android:layout_marginRight="@dimen/DIMEN_11dp"
        android:layout_marginTop="@dimen/DIMEN_3dp"
        android:background="@drawable/drawable_provider_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/DIMEN_50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="积分"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/DIMEN_15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/DIMEN_10dp"
            android:layout_marginTop="@dimen/DIMEN_10dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_mValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:cursorVisible="false"
            android:paddingLeft="@dimen/DIMEN_9dp"
            android:hint="请填写商品赠送积分"
            android:inputType="number"
            android:lines="2"
            android:textColorHint="#c9c9c9"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>