<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/left_arrow" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/btn_back_call"
            android:gravity="center"
            android:singleLine="true"
            android:text="发货方式"
            android:paddingLeft="5dp"
            android:textColor="#333333"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="保存"
            android:textColor="#333333"
            android:textSize="@dimen/DIMEN_15sp"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#e1e1e1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#f3f3f3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_12dp"
        android:text="发货方式"
        android:textColor="#9a9a9a"
        android:textSize="@dimen/DIMEN_15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7" />

    <RelativeLayout
        android:id="@+id/rl_need"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12dp"
            android:text="快递"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/DIMEN_16sp" />
        <TextView
            android:id="@+id/tv_select_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/fzf"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7" />
    <RelativeLayout
        android:id="@+id/rl_no_need"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12dp"
            android:text="无需物流"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/DIMEN_16sp" />
        <TextView
            android:id="@+id/tv_select_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/fzg"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#f3f3f3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_12dp"
        android:text="快递单号"
        android:textColor="#9a9a9a"
        android:textSize="@dimen/DIMEN_15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_48dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <EditText
            android:id="@+id/et_express_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#000000"
            android:cursorVisible="false"
            android:textColorHint="#b9b9b9"
            android:textSize="13sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/DIMEN_5dp"
            android:layout_marginBottom="@dimen/DIMEN_5dp"
            android:background="#e7e7e7"/>
        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="@dimen/DIMEN_103dp"
            android:layout_height="match_parent"
            android:src="@mipmap/img_scan"/>
    </LinearLayout>
</LinearLayout>