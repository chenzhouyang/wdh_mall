<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:background="@color/layout_title_color">

        <ImageView
            android:id="@+id/iv_history_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/DIMEN_10dp"
            android:gravity="center"
            android:src="@mipmap/left_arrow_yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="历史详情"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/DIMEN_18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_details"
        android:layout_width="@dimen/DIMEN_80dp"
        android:layout_height="@dimen/DIMEN_80dp"
        android:layout_marginTop="@dimen/DIMEN_20dp"
        android:src="@mipmap/img_error" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/DIMEN_20dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:id="@+id/history_name"
        android:textColor="@color/a000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单价"
        android:padding="@dimen/DIMEN_10dp"
        android:id="@+id/xlv_item_pric"
        android:textColor="@color/a000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2dp"
        android:layout_marginTop="@dimen/DIMEN_10dp"
        android:background="@color/B3B3B3" />
    <com.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/xlv_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:cacheColorHint="@color/a00000000" />

</LinearLayout>