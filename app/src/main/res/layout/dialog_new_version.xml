<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/border_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="新版本更新内容"
        android:textColor="#282e42"
        android:textSize="16sp" />

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#c8ccd8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="25dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            
          <!--   <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@drawable/icon_warning"
                android:visibility="gone"
                /> -->

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@null"
                android:drawablePadding="5dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingTop="3dp"
            android:textColor="#888888"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#d4d7d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="48.6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text="取消"
            android:textColor="#333333" />

        <View
            android:id="@+id/bouttom_line"
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="#d4d7d9" />

        <Button
            android:id="@+id/on"
            android:layout_width="wrap_content"
            android:layout_height="48.6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:text="更新"
            android:textColor="#333333" />
    </LinearLayout>

</LinearLayout>