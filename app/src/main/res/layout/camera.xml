<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.yskj.wdh.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:clipToPadding="true"
        android:gravity="center"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@mipmap/navbar"
                android:gravity="center"
                android:paddingBottom="@dimen/zhongju"
                android:paddingTop="@dimen/zhongju"
                android:text="扫描二维码"
                android:textColor="@android:color/white"
                android:textSize="@dimen/zhonghao"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_cancel_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/DIMEN_20dp"
                android:src="@mipmap/left_arrow_yellow"
                android:layout_marginTop="13dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>