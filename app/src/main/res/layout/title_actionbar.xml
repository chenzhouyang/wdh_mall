<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
              android:background="#1eb4fe"
              android:orientation="vertical">

    <LinearLayout
        android:layout_height="@dimen/LargeAvatarSize"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/left_arrow_yellow"/>

        <TextView
            android:id="@+id/title_content"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/zhonghao"/>

        <TextView
            android:id="@+id/title_menu"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/zhongju"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/xiaohao"/>
    </LinearLayout>

</LinearLayout>
