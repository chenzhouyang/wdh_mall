<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_other_no_send_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_other_no_send_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/DIMEN_14sp"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:text="选择地区"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/right_arrow_admin"
            android:gravity="center"
            android:text=""
            android:textColor="#888888"
            android:textSize="13sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#e1e1e1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/DIMEN_20dp"
            android:layout_marginTop="@dimen/DIMEN_20dp">
            <EditText
                android:id="@+id/et_count"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/drawable_post"
                android:cursorVisible="false"
                android:maxLines="1"
                android:inputType="number"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/DIMEN_8dp"
                android:paddingRight="@dimen/DIMEN_8dp"
                android:textSize="@dimen/DIMEN_13sp"
                android:textColor="#8b8b8b"
                android:text="件内"
                />
            <EditText
                android:id="@+id/et_price"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/drawable_post"
                android:cursorVisible="false"
                android:maxLines="1"
                android:inputType="number"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/DIMEN_8dp"
                android:paddingRight="@dimen/DIMEN_8dp"
                android:textSize="@dimen/DIMEN_13sp"
                android:textColor="#8b8b8b"
                android:text="元"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/DIMEN_20dp"
            android:layout_marginTop="@dimen/DIMEN_12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="@dimen/DIMEN_8dp"
                android:textSize="@dimen/DIMEN_13sp"
                android:textColor="#8b8b8b"
                android:text="每增加"
                />
            <EditText
                android:id="@+id/et_add_count"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/drawable_post"
                android:cursorVisible="false"
                android:maxLines="1"
                android:inputType="number"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/DIMEN_8dp"
                android:paddingRight="@dimen/DIMEN_8dp"
                android:textSize="@dimen/DIMEN_13sp"
                android:textColor="#8b8b8b"
                android:text="件，运费增加"
                />
            <EditText
                android:id="@+id/et_add_price"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/drawable_post"
                android:cursorVisible="false"
                android:maxLines="1"
                android:inputType="number"
                android:textColorHint="#c9c9c9"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/DIMEN_8dp"
                android:paddingRight="@dimen/DIMEN_8dp"
                android:textSize="@dimen/DIMEN_13sp"
                android:textColor="#8b8b8b"
                android:text="元"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>