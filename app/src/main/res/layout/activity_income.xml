<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ed2d61"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/left_arrow_yellow" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/btn_back_call"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/fen_problem"
            android:visibility="invisible" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/income_bg"
        android:text="总收入：0.00"
        android:id="@+id/income_price"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@mipmap/income_day"
        android:text="日收入"
        android:id="@+id/income_day"
        android:drawablePadding="10dp"
        android:textColor="#535353"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e2e2e2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@mipmap/income_mouth"
        android:text="月收入"
        android:drawablePadding="10dp"
        android:textColor="#535353"
        android:id="@+id/income_mouth"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e2e2e2"/>
</LinearLayout>