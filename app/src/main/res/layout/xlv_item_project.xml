<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!-- 历史验证Xlistview的item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_xlv_item"
                android:layout_width="@dimen/DIMEN_80dp"
                android:layout_marginLeft="10dp"
                android:layout_height="@dimen/DIMEN_80dp"
                android:src="@mipmap/img_error" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xlv_history_item"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_xlv_history_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_5dp"
                android:layout_marginLeft="@dimen/DIMEN_20dp"
                android:layout_marginTop="@dimen/DIMEN_5dp"
                android:text="name"
                android:textColor="@color/a0B0400" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_5dp"
                android:layout_marginTop="@dimen/DIMEN_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/DIMEN_20dp"
                    android:text="价格：￥"
                    android:textColor="@color/a5A7385" />

                <TextView
                    android:id="@+id/tv_xlv_history_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="1111"
                    android:textColor="@color/a5A7385" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_xlv_history_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_20dp"
                    android:layout_marginTop="@dimen/DIMEN_8dp"
                    android:layout_weight="1"
                    android:text="time"
                    android:textColor="@color/a5A7385" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5dp"
                    android:text="已验证:"
                    android:textColor="@color/a5A7385" />

                <TextView
                    android:id="@+id/tv_xlv_checked_nub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_4dp"
                    android:layout_marginRight="@dimen/DIMEN_20dp"
                    android:layout_marginTop="@dimen/DIMEN_5dp"
                    android:text="0000"
                    android:textColor="@color/a5A7385" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2dp"
        android:layout_marginTop="@dimen/DIMEN_3dp"
        android:background="@color/B3B3B3" />
</LinearLayout>