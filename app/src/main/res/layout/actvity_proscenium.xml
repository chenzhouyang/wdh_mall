<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme"
    >
    <include layout="@layout/activity_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_money"
            android:textColor="@color/black"
            android:gravity="center"
            android:src="@mipmap/start_prosecenium"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#f3f3f3"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/paid_image"
            android:id="@+id/paid_money"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey"/>
    <com.pulltorefresh.library.PullToRefreshScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_proseceni">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <com.yskj.wdh.widget.SwipeListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        android:cacheColorHint="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:divider="@null"
        android:layout_marginTop="5dp"
        android:id="@+id/prosecnium_lv"/>
        </LinearLayout>
    </com.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>