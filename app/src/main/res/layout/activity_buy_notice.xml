<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:orientation="vertical">

    <include layout="@layout/title_actionbar"/>

    <include layout="@layout/gray_cut_off_line"/>

    <include
        android:id="@+id/notice_set1"
        layout="@layout/item_buy_notice_set"/>

    <include
        android:id="@+id/notice_set2"
        layout="@layout/item_buy_notice_set"/>

    <include
        android:id="@+id/notice_set3"
        layout="@layout/item_buy_notice_set"/>

    <include
        android:id="@+id/notice_set4"
        layout="@layout/item_buy_notice_set"/>
    <LinearLayout
        android:id="@+id/notice_set4_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/notice_set4_yes_a"
            android:layout_width="@dimen/DIMEN_0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <include
        android:id="@+id/notice_set5"
        layout="@layout/item_buy_notice_set"/>
    <include
        android:id="@+id/notice_set6"
        android:visibility="gone"
        layout="@layout/item_buy_notice_set"/>
    <include
        android:id="@+id/notice_set7"
        android:visibility="gone"
        layout="@layout/item_buy_notice_set"/>
    <include
        android:id="@+id/notice_set8"
        android:visibility="gone"
        layout="@layout/item_buy_notice_set"/>

</LinearLayout>
