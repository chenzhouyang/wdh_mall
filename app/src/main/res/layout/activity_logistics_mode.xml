<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_theme">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/left_arrow" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/btn_back_call"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:paddingLeft="5dp"
            android:textColor="#333333"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="保存"
            android:textColor="#333333"
            android:textSize="@dimen/DIMEN_15sp"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#e2e2e2" />

    <com.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_7dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/DIMEN_15dp"
                android:paddingTop="@dimen/DIMEN_15dp">

                <CheckBox
                    android:id="@+id/ck_chose_one"
                    style="@style/CheckBoxLogistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_6dp"
                    android:layout_toRightOf="@id/ck_chose_one"
                    android:text="包邮"
                    android:textColor="#333333"
                    android:textSize="@dimen/DIMEN_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_all"
                    android:layout_marginLeft="@dimen/DIMEN_6dp"
                    android:layout_toRightOf="@id/ck_chose_one"
                    android:text="全国所有地区免邮"
                    android:textColor="#909090"
                    android:textSize="@dimen/DIMEN_12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/DIMEN_15dp"
                android:paddingTop="@dimen/DIMEN_15dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/ck_chose_two"
                    style="@style/CheckBoxLogistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ck_chose_two"
                    android:layout_marginLeft="@dimen/DIMEN_6dp"
                    android:text="包邮(除偏远地区)"
                    android:textColor="#333333"
                    android:textSize="@dimen/DIMEN_15sp" />

                <TextView
                    android:id="@+id/tv_faraway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_select"
                    android:layout_marginLeft="@dimen/DIMEN_6dp"
                    android:layout_toRightOf="@id/ck_chose_two"
                    android:text="偏远地区"
                    android:textColor="#909090"
                    android:textSize="@dimen/DIMEN_12sp" />

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_width="@dimen/DIMEN_20dp"
                    android:layout_height="@dimen/DIMEN_20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <com.yskj.wdh.widget.NoScrollListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"></com.yskj.wdh.widget.NoScrollListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/DIMEN_21dp"
                android:text="运费模板帮助说明"
                android:textColor="#1374ec"
                android:textSize="@dimen/DIMEN_12sp" />
        </LinearLayout>
    </com.pulltorefresh.library.PullToRefreshScrollView>

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#e2e2e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_56dp"
            android:drawableLeft="@mipmap/provider_add_goods"
            android:drawablePadding="@dimen/DIMEN_10dp"
            android:gravity="center"
            android:text="新建运费模板"
            android:textColor="#363636"
            android:textSize="@dimen/DIMEN_16sp" />
    </LinearLayout>
</LinearLayout>